modules = ["nodejs-20", "python-3.11", "postgresql-16"]

[nix]
channel = "stable-24_05"
packages = ["cargo", "libiconv", "postgresql", "rustc"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FastAPI Backend"

[[workflows.workflow]]
name = "FastAPI Backend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && python -m uvicorn main:app --host 0.0.0.0 --port 5000 --reload"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "cd /home/runner/workspace && python -m uvicorn main:app --host 0.0.0.0 --port 5000 --reload"]

[[ports]]
localPort = 5000
externalPort = 80
